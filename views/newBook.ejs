<html lang="en">
    <%- include('partials/header.ejs'); -%>
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Add BookNote</title>
      <link rel="stylesheet" href="./styles/newBook.css">
    </head>

    <body>
      <div id="heading">
        <h1>Add New BookNote</h1>
      </div>
      <div class="box">
          <form  class="button" action="/newbook" method="post">
        <div class="firstRow">
          <h2>Book ISBN</h2>
          <h2>Book Name</h2>
          <h2>Book Note</h2>
        </div>
              <div class="userInput">
                  <input type="text" name="newBookISBN" placeholder="ISBN" autocomplete="off" autofocus="true" />
                  <input type="text" name="newBookName" placeholder="Name" autocomplete="off" autofocus="true" />
                  <input type="text" name="newBookNote" placeholder="Note" autocomplete="off" autofocus="true" />
              </div>
              <button  class="add" type="submit" name="add" value=newBook>+</button>
          </form>
      </div>
    </body>
  <script>
    function handler(id) {
      document.getElementById("title" + id).setAttribute("hidden", true)
      document.getElementById("edit" + id).setAttribute("hidden", true)
      document.getElementById("done" + id).removeAttribute("hidden")
      document.getElementById("input" + id).removeAttribute("hidden")
    }
  </script>
  <%- include('partials/footer.ejs'); -%>
</html>